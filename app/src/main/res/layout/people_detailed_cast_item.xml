<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small"
    android:paddingLeft="@dimen/padding_medium"
    android:paddingRight="@dimen/padding_medium"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_movie_item"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/card_elevation"
        card_view:cardCornerRadius="@dimen/card_corner_radius">
        <RelativeLayout
            android:id="@+id/layout_cast_item"
            android:background="@color/colorItemBackgroundDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools">

            <ImageView
                android:id="@+id/image_poster"
                android:scaleType="centerInside"
                android:layout_width="@dimen/list_image_width"
                android:layout_height="@dimen/list_image_height"
                tools:background="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_small"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorTextLight"
                android:layout_toRightOf="@id/image_poster"
                tools:text="Name"/>

            <TextView
                android:id="@+id/text_character_or_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_poster"
                android:layout_below="@id/text_title"
                android:padding="@dimen/padding_medium"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/text_size_small"
                tools:text="Character"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>